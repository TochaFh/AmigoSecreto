@model SecretFriendResult
@{
    ViewData["Title"] = $"Amigo Secreto - Revelado";
}

<h5 style="text-align: center; margin-bottom: 30px;">
    <em>Parabéns!</em>
</h5>

<ul class="collection with-header hoverable" style="margin-top: 150px; margin-bottom: 30px;">

    <li class="collection-header" style="text-align: center;">
        <h4>Olá, <em>@Model.Person</em>. Seu amigo secreto é:</h4>
    </li>
    <li class="collection-item active hoverable" style="text-align: center; font-size: 30px;">
        <div>
            <h2>@Model.SecretFriend</h2>
        </div>
    </li>

</ul>
